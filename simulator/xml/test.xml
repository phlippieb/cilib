<?xml version="1.0"?>
<!DOCTYPE simulator [
<!ATTLIST algorithm id ID #IMPLIED>
<!ATTLIST problem id ID #IMPLIED>
<!ATTLIST measurements id ID #IMPLIED>
]>

<simulator>		

	<algorithms>
	

	        <algorithm id="a" class="pso.PSO">
	            <iterationStrategy class="pso.iterationstrategies.ASynchronousIterationStrategy"/>
	            <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy">
	                <entityNumber value="10"/>
	                <entityType class="pso.particle.StandardParticle">
	                    <particleBehavior class="pso.particle.ParticleBehavior">
	                    </particleBehavior>
	                    <positionProvider class="pso.positionprovider.LinearPositionProvider"/>
	                    <velocityProvider class="pso.velocityprovider.StandardVelocityProvider">
	                        <!-- velocity provider params-->
	                    </velocityProvider>
	                </entityType>
	            </initialisationStrategy>
	            <addStoppingCondition class="stoppingcondition.MeasuredStoppingCondition" target="100000"/>
    	</algorithm>
    

    </algorithms>


    <problems>


        <problem id="f" class="problem.FunctionOptimisationProblem" domain="R(0:10)^81">
            <function class="functions.discrete.Soduko" />
        </problem>


    </problems>


    <measurements id="fitness" class="simulator.MeasurementSuite" resolution="200">
    	<addMeasurement class="measurement.single.Fitness"/>
	</measurements>



	<simulations>


        <simulation samples="1">
            <algorithm     idref="a"/>
            <problem       idref="f"/>
            <measurements  idref="fitness"/>
            <output        format="TXT" file="data/test.txt"/>
      	</simulation>


  </simulations>
</simulator>
